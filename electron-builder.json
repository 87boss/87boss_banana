{
    "appId": "cn.runninghub.ai-client",
    "productName": "87Boss RunningHub AI",
    "copyright": "Copyright Â© 2026 RunningHub",
    "asar": true,
    "directories": {
        "output": "release"
    },
    "publish": {
        "provider": "generic",
        "url": "https://xz.wuwo.casa/download/runninghub-client/"
    },
    "files": [
        "dist/**/*",
        "electron/**/*",
        "public/rh.png",
        "backend-nodejs/**/*",
        "!backend-nodejs/.venv/**",
        "!backend-nodejs/node_modules/**",
        "!**/test/**",
        "!**/*.md",
        "!**/.bin/**"
    ],
    "asarUnpack": [
        "node_modules/archiver/**/*",
        "backend-nodejs/**/*"
    ],
    "extraResources": [
        "extraResources/**/*",
        {
            "from": "backend-nodejs",
            "to": "backend-nodejs",
            "filter": [
                "**/*",
                "!.venv/**",
                "!node_modules/**"
            ]
        }
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.ico",
        "artifactName": "RunningHub-AI-${version}-Setup.${ext}",
        "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": false,
        "installerIcon": "public/icon.ico",
        "uninstallerIcon": "public/icon.ico",
        "installerHeaderIcon": "public/icon.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "87Boss RunningHub AI"
    }
}